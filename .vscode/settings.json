{
  "chatgpt.cliExecutable": "${workspaceFolder}/scripts/codex-vscode.sh",
  "python.analysis.diagnosticMode": "workspace",
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "-q"
  ],
  "json.schemas": [
    {
      "fileMatch": [
        "/.ratchetr/manifest.json"
      ],
      "url": "${workspaceFolder}/schemas/manifest.schema.json"
    },
    {
      "fileMatch": [
        "/.ratchetr/ratchet.json"
      ],
      "url": "${workspaceFolder}/schemas/ratchet.schema.json"
    }
  ],
  "editor.formatOnSave": true,
  "ruff.enable": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  }
}
