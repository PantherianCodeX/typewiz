{
  "python.analysis.diagnosticMode": "workspace",
  // Use pytest with quiet default like tox
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "-q"
  ],
  // mypy runs using project config
  "mypy-type-checker.enabled": true,
  "mypy-type-checker.args": [
    "--config-file",
    "mypy.ini"
  ],
  // Disable legacy mypy integration from Python extension
  "python.linting.mypyEnabled": false,
  // Pylance/pyright reads pyrightconfig.json (include: src)
  // Donâ€™t override typeCheckingMode here; use repo config
  // Formatting and linting to match repo tools (Ruff-only)
  "editor.formatOnSave": true,
  "ruff.enable": true,
  // Use Ruff as the default formatter for Python files
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  }
}
