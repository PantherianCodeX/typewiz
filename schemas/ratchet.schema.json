{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://typewiz.dev/schemas/ratchet.schema.json",
  "title": "RatchetModel",
  "type": "object",
  "required": [
    "schemaVersion",
    "generatedAt",
    "runs"
  ],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "enum": [
        1
      ]
    },
    "generatedAt": {
      "type": "string"
    },
    "manifestPath": {
      "type": [
        "string",
        "null"
      ]
    },
    "projectRoot": {
      "type": [
        "string",
        "null"
      ]
    },
    "runs": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "$ref": "#/$defs/runBudget"
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "severity": {
      "type": "string",
      "enum": [
        "error",
        "warning",
        "information"
      ]
    },
    "mode": {
      "type": "string",
      "enum": [
        "current",
        "full"
      ]
    },
    "runBudget": {
      "type": "object",
      "required": [
        "severities",
        "paths",
        "targets"
      ],
      "properties": {
        "severities": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/severity"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "paths": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/pathBudget"
          }
        },
        "targets": {
          "type": "object",
          "propertyNames": {
            "$ref": "#/$defs/severity"
          },
          "additionalProperties": {
            "type": "integer",
            "minimum": 0
          }
        },
        "engine_signature": {
          "oneOf": [
            {
              "$ref": "#/$defs/engineSignature"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "pathBudget": {
      "type": "object",
      "required": [
        "severities"
      ],
      "properties": {
        "severities": {
          "type": "object",
          "propertyNames": {
            "$ref": "#/$defs/severity"
          },
          "additionalProperties": {
            "type": "integer",
            "minimum": 0
          }
        }
      },
      "additionalProperties": false
    },
    "engineSignature": {
      "type": "object",
      "required": [
        "engineOptions"
      ],
      "properties": {
        "tool": {
          "type": [
            "string",
            "null"
          ]
        },
        "mode": {
          "oneOf": [
            {
              "$ref": "#/$defs/mode"
            },
            {
              "type": "null"
            }
          ]
        },
        "engineOptions": {
          "type": "object"
        },
        "hash": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
